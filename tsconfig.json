{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "target": "ES2018",
      "resolveJsonModule": true,
      "importsNotUsedAsValues": "remove",
      "preserveValueImports": false
  }
}
