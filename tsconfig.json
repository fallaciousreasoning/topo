{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "out/*"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "ES2022",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "verbatimModuleSyntax": false
  }
}
